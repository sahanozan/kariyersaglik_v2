{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": { "buildType": "apk" }
    },
    "preview": {
      "distribution": "internal",
      "android": { 
        "buildType": "apk"
      }
    },
    "production": {
      "android": { "buildType": "app-bundle" }
    },
    "apk": {
      "distribution": "internal",
      "android": { 
        "buildType": "apk",
        "image": "latest"
      }
    }
  },
  "submit": {
    "production": {
      "android": { "track": "production" }
    }
  }
}